 + * / 
 + private class ReloadAction extends AbstractAction { 
 + private static final long serialVersionUID = - 890320994114628011L ; 
 + 
 + @ Override 
 + public void actionPerformed ( ActionEvent event ) { 
 + openFile ( model . getCurrentFile ( ) ) ; 
 + } 
 + } 
